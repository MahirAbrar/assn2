{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Highest Air Pollution in 1990",
    "fontSize": 24,
    "font": "Arial"
  },
  "width": "345",
  "height": "300",
  "data": {
    "url": "https://raw.githubusercontent.com/MahirAbrar/assn2/main/data/top_10_1990.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "sort": "-y",
      "axis": {
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    },
    "y": {
      "field": "Air pollution (total) (IHME, 2019)",
      "type": "quantitative",
      "title": "Air Pollution Death Rate in 1990",
      "axis": {
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    }
  }
}
