{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Highest Air Pollution in 2016",
    "fontSize": 24,
    "font": "Arial"
  },
  "width": "345",
  "height": "300",
  "data": {
    "url": "https://raw.githubusercontent.com/MahirAbrar/assn2/main/data/topTen2016.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "sort": "-y",
      "axis": {
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    },
    "y": {
      "field": "airPol",
      "type": "quantitative",
      "title": "Air Pollution Death Rate in 2016",
      "axis": {
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    },
    "color": {
      "condition": [
        {
          "test": "datum.Entity === 'North Korea' || datum.Entity === 'Solomon Islands'",
          "value": "orange"
        },
        {
          "test": "datum.Entity === 'Bangladesh' || datum.Entity === 'India' || datum.Entity === 'Nepal'",
          "value": "red"
        }
      ],
      "value": "steelblue"
    },
    "tooltip": [
      {
        "field": "Entity",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "airPol",
        "type": "quantitative",
        "title": "Air Pollutants in the Air (ppb)"
      },
      {
        "field": "continent",
        "type": "nominal",
        "title": "Continent"
      },
      {
        "field": "sub_region",
        "type": "nominal",
        "title": "Sub Region"
      }
    ]
  }
}
