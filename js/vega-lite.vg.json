{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Worldwide Death by Air in 2016 (IHME)",
    "fontSize": 32,
    "font": "Arial"
  },
  "width": "1200",
  "height": "600",
  "config": {
    "background": "#a79d9a"
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.ADM0_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/MahirAbrar/assn2/main/data/mapData.csv"
            },
            "key": "Code",
            "fields": ["airPol", "Entity", "Year", "Continent", "sub_region"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "field": "airPol",
          "type": "quantitative",
          "scale": {
            "scheme": "reds"
          },
          "title": "Air Pollutant Particles"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "airPol",
            "type": "quantitative",
            "title": "Air Pollutants in the Air (ppb)"
          },
          { "field": "Year", "type": "nominal", "title": "Year" },
          { "field": "Continent", "type": "nominal", "title": "Continent" },
          { "field": "sub_region", "type": "nominal", "title": "Sub Region" }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "darkblue"
      }
    },
    {
      "data": {
        "values": [
          { "lon": -100, "lat": 45, "conVal": "North America" },
          { "lon": -60, "lat": -15, "conVal": "South America" },
          { "lon": -10, "lat": 50, "conVal": "Europe" },
          { "lon": 20, "lat": 10, "conVal": "Africa" },
          { "lon": 80, "lat": 30, "conVal": "Asia" },
          { "lon": 140, "lat": -25, "conVal": "Australia" },
          { "lon": 170, "lat": -45, "conVal": "Oceania" },
          { "lon": -0, "lat": -80, "conVal": "Antarctica" }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "color": "black",
        "fontStyle": "bold",
        "style": {
          "pointerEvents": "none"
        }
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "conVal", "type": "nominal" }
      }
    },
    {
      "data": {
        "values": [{ "lon": 0, "lat": -45, "conVal": "Ocean" }]
      },
      "mark": { "type": "text", "fontSize": 32 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "conVal", "type": "nominal" }
      }
    },
    {
      "data": {
        "values": [{ "label": "Undefined", "color": "gray" }]
      },
      "mark": {
        "type": "square",
        "size": 200,
        "fill": "#a79d9a",
        "stroke": "black"
      },

      "encoding": {
        "x": { "value": 30 },
        "y": { "value": 30 },
        "color": {
          "type": "nominal",
          "legend": null
        }
      }
    },
    {
      "data": {
        "values": [{ "label": "Data Not Available" }]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "dx": 60,
        "dy": 0
      },
      "encoding": {
        "x": { "value": 30 },
        "y": { "value": 30 },
        "text": { "field": "label", "type": "nominal" }
      }
    }
  ],

  "projection": {
    "type": "equalEarth"
  }
}
